<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnClear"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barcode Matcher"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A73E8"
                android:layout_marginBottom="16dp"/>

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <Button
                        android:id="@+id/btnScan1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="สแกนที่ 1"
                        android:backgroundTint="#1A73E8"/>
                    <TextView
                        android:id="@+id/tvCode1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ค่าที่ 1: -"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <Button
                        android:id="@+id/btnScan2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="สแกนที่ 2"
                        android:backgroundTint="#1A73E8"/>
                    <TextView
                        android:id="@+id/tvCode2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ค่าที่ 2: -"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Result Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">
                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="รอการสแกน..."
                    android:textAlignment="center"
                    android:padding="24dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#BCBCBC"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- ปุ่ม Clear อยู่ติดขอบล่างเสมอ ไม่ต้องเลื่อนหา -->
    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="ล้างค่าทั้งหมด (CLEAR)"
        android:backgroundTint="#5F6368"
        android:textStyle="bold"
        android:textSize="16sp"/>

</RelativeLayout>